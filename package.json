{
  "name": "@relaycorp/relaynet-testing",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "Testing utilities for Relaynet implementations in JavaScript\n\n",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/relaycorp/relaynet-testing-js",
  "homepage": "https://docs.relaycorp.tech/relaynet-testing-js/",
  "license": "MIT",
  "keywords": [
    "relaynet"
  ],
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "doc-api": "typedoc src/index.ts --out build/docs/api",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@relaycorp/relaynet-core": "^1.46.2"
  },
  "devDependencies": {
    "@relaycorp/shared-config": "^1.4.15",
    "@types/verror": "^1.10.4",
    "del-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-node": "^10.3.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.20.37",
    "typescript": "^3.9.10"
  },
  "peerDependencies": {
    "@relaycorp/relaynet-core": ">= 1.46.2 < 2"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public"
  }
}
